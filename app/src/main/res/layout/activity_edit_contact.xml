<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.AddContactActivity">

    <include layout="@layout/toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_height="0dp"
            android:layout_weight="1">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textColor="@color/primaryTextColor"
                  android:text="Nome do contato:"/>

        <EditText android:layout_width="match_parent"
                  android:id="@+id/et_name_contact"
                  android:layout_height="wrap_content"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textColor="@color/primaryTextColor"
                  android:text="Telefone do contato:"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_cellphone_contact"
                  android:inputType="number"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="18sp"
                  android:textColor="@color/primaryTextColor"
                  android:text="Email do contato:"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/et_email_contact"
                  android:inputType="textEmailAddress"/>

    </LinearLayout>

    <Button
            android:id="@+id/button_edit_contact"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:text="Editar o contato"/>


</LinearLayout>